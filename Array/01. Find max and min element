#include<bits/stdc++.h>
using namespace std;

int FindMax(vector<int>& arr)
{
    sort(arr.begin(), arr.end());
    return arr[arr.size()-1];
    //   return arr[0]; smaller

}

int FindMin(vector<int>& arr)
{

    sort(arr.begin(), arr.end(), greater<int>());
    //sorting in descending order
    return arr[arr.size()-1];
}

int main()
{
   vector<int> arr={1,4,5,63,56};

   cout<<"The Largest element in the array is: "<<FindMax(arr)<<endl;
   cout<<"The smallest element in the array is: "<<FindMin(arr)<<endl;
}
