#include<bits/stdc++.h>
using namespace std;

int FindMax(vector<int>& nums)
{
    sort(nums.begin(), nums.end());
    return nums[nums.size()-1];
    //   return nums[0]; smaller

}

int FindMin(vector<int>& arr)
{

    sort(nums.begin(), nums.end(), greater<int>());
    //sorting in descending order
    return nums[nums.size()-1];
}

int main()
{
   vector<int> nums={1,4,5,63,56};

   cout<<"The Largest element in the array is: "<<FindMax(nums)<<endl;
   cout<<"The smallest element in the array is: "<<FindMin(nums)<<endl;
}
